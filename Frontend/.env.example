# Coinbase Developer Platform (CDP) Configuration
# Get your project ID from: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_CDP_PROJECT_ID=your_cdp_project_id_here

# Privy Configuration
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# Prediction Contract Address on Base Sepolia
# Deploy your contract and paste the address here
NEXT_PUBLIC_PREDICTION_CONTRACT=0x3D7A623Ce81d4f406b19002A17f946DaE41D4115

# Filecoin / Synapse (decentralized storage)
# Required for storing user stats and leaderboard data on Filecoin via Synapse
NEXT_PUBLIC_SYNAPSE_PRIVATE_KEY=your_synapse_private_key
NEXT_PUBLIC_SYNAPSE_RPC_URL=https://api.calibration.node.glif.io/rpc/v1
NEXT_PUBLIC_SYNAPSE_PROJECT_ID=your_synapse_project_id
NEXT_PUBLIC_SYNAPSE_API_KEY=your_synapse_api_key
# Optional: CID of the registry document that tracks all user stat CIDs
NEXT_PUBLIC_SYNAPSE_REGISTRY_CID=

# Optional: Analytics and monitoring
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
